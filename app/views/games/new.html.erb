<div class="container">
  <h1>New game</h1>
  <div class="flex-container">
    <% @letters.each do |letter| %>
      <div class="flex-item">
        <%= letter %>
      </div>
    <% end %>
  </div>
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @letters %>
      <label for="word">What is the longest word you can find?</label>
      <input type="text" name="word" placeholder="Your word">
  </form>
</div>
